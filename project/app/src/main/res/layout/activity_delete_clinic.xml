<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DeleteClinic">

    <TextView
        android:id="@+id/clinicProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="CLINIC PROFILE"
        android:textColor="@color/colorPrimary"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delclinicname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"

            android:text="Name:"
            android:textColor="#010101"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/delclinicaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"

            android:text="Address:"
            android:textColor="#010101"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/delclinicphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"

            android:text="Phone#:"
            android:textColor="#010101"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/delclinicinsurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"

            android:text="Insurance:"
            android:textColor="#010101"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/delclinicpayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"

            android:text="Payment:"
            android:textColor="#010101"
            android:textSize="24sp" />

        <Button
            android:id="@+id/delclinicbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/Red"
            android:text="DELETE"
            android:textColor="#ffffff"
            android:textSize="20dp" />


    </LinearLayout>

</LinearLayout>